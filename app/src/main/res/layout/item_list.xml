<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:orientation="vertical"
    android:padding="20dp">


    <RelativeLayout
        android:id="@+id/playout"
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:padding="12dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="199dp"
            android:layout_height="41dp"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignParentRight="true"
            android:layout_marginStart="21dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-1dp"
            android:layout_marginRight="77dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="Product Title"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#00F"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="131dp"
            android:layout_height="49dp"
            android:layout_above="@+id/tv_color"
            android:layout_below="@+id/tv_title"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="76dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="103dp"
            android:layout_marginBottom="7dp"
            android:layout_toEndOf="@+id/tv_price_text"
            android:layout_toRightOf="@+id/imageView"
            android:text="Product price"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#00F" />

        <TextView
            android:id="@+id/tv_color"
            android:layout_width="139dp"
            android:layout_height="41dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="73dp"
            android:layout_marginEnd="97dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/tv_color_text"
            android:layout_toRightOf="@+id/imageView"
            android:text="Product color"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#00F" />

        <TextView
            android:id="@+id/tv_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="77dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="Price" />

        <TextView
            android:id="@+id/tv_color_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="31dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="Color" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
